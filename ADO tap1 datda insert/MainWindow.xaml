<Window x:Class="ADO_tap1_datda_insert.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO_tap1_datda_insert"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <ListBox x:Name="listbox1" Margin="0,0,150,0" Height="400" Width="300" BorderThickness = "1" BorderBrush="Black" FontSize="20" ></ListBox>
        <Button x:Name="btnAdd" Margin="300,0,0,50" Height="30" Width="100" Content="add" Click="Button_Click" ></Button>
        <Label Margin="300,0,0,300" Height="30" Width="100" Content="Name"></Label>
        <TextBox x:Name="name1" Margin="300,0,0,250" Height="30" Width="100" FontSize="20"></TextBox>
        <Label Margin="300,0,0,200" Height="30" Width="100" Content="Surname"></Label>
        <TextBox x:Name="surname1" Margin="300,0,0,150" Height="30" Width="100" FontSize="20"></TextBox>
        
    </Grid>
</Window>
